<h1>Edit To-Do Item</h1>

<%= form_for @item do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :description %>
	<%= f.text_area :description %>

	<%= f.label :priority %>
	<%= f.text_field :priority %>

	<%= f.label :complete %>
	<%= f.check_box :complete %>

	<%= f.submit %>
<% end %>

