<h1>New To-Do Item</h1>

<div>
	<%= form_for @item do |f| %>
		<%= f.label :name %>
		<%= f.text_field :name %>

		<%= f.label :description %>
		<%= f.text_area :description %>

		<%= f.label :priority %>
		<%= f.text_field :priority %>

		<%= f.check_box :complete, :checked => false, :style => 'visibility: hidden' %>

		<%= f.submit %>
	<% end %>
</div>